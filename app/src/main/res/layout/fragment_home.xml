<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   tools:context=".ui.fragments.HomeFragment">
    <LinearLayout
            android:id="@+id/something1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#f2f5df"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/car">
    </LinearLayout>
    />
    <ImageView
            android:id="@+id/car"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_margin="62dp"
            android:background="@drawable/car"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"/>
    <Button
            android:id="@+id/btnOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:background="@drawable/button"
            app:layout_constraintLeft_creator="1"
            app:layout_constraintTop_toBottomOf="@+id/car"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_margin="62dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>